<%- include('./partials/headerLogeado.ejs') %> 




<!-- Datos del usuario -->
<section class="info-usuario container products-wrapper">
  <div class="row">
    <div class="img-container offset-3 col-2">
      <img src="<%= user.picture %>" alt="foto de perfil" class="foto-perfil">
    </div>
    <div class="data-container col-6">
      <div class="d-flex align-items-center ">
        <h1 class="main-title"><%= user.name %>
          <a href="/users/me/edit">
            <i class="fas fa-cog"></i>
          </a>
        </h1> 
        <a class="btn mt-3 ml-4" href="">SEGUIR</a>
      </div> 
        <h3 ><%= user.mail %></h3>
      <div>
        <ul class="">
          <li>8 productos</li>
          <li>200 seguidores</li>
          <li>300 comentarios</li>
        </ul>
      </div>
    </div>
  </div>
</section>
<!-- /Datos del usuario -->

<!-- Mis productos -->
<div class="container products-wrapper">
  <div class="row">
    <div class="col-12">
      <h2 class="products-title">Mis productos</h2>
    </div>
    <!-- Show mis productos -->
    <% for (let i=0; i<products.length; i++){ %>
    <div class="col-12 col-sm-6 col-lg-3">
      <section class="product-box">
        <a href="/products/detail/<%= products[i].id %>" >
          <figure class="product-box_image">
            <img src= <%= products[i].img %> alt="<%= products[i].name %>" class="img-index">
          </figure>
          <article class="product-box_data">
            <h2><%= products[i].name %></h2>
           
            <p><%= products[i].description %></p>
            <p>Comentarios: 12</p>
          </article>
        </a>
      </section>
    </div>
    <%} %>
  </div>
</div>
<!-- /Mis productos -->

<%- include('./partials/footer.ejs') %> 