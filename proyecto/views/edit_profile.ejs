<%- include('./partials/headerLogeado.ejs') %>
  <main class="form">
    <form action="/" class="form-label" enctype="multipart/form-data">
      <div>
        <label for="email" class="form-label">Email</label>
        <input type="email" id="email" class="form-input" value="<%= user.email %>" name="email">
      </div>
      <div>
        <label for="username" class="form-label">Nombre de usuario</label>
        <input type="text" id="username" class="form-input" value="<%= user.username %>" name="username">
      </div>
      <div>
        <label for="pass" class="form-label">Contrase√±a</label>
        <input type="password" id="pass" class="form-input" value="<%= user.pass %>" name="pass">
      </div>
      <div>
        <label for="birthd" class="form-label">Fecha de nacimiento</label>
        <input type="date" id="birthd" class="form-input" name="birthd">
      </div>
      <div>
        <label for="img" class="form-label">Foto de perfil</label>
        <input type="file" id="img" class="form-input" value="<%= user.img %>" name="img">
      </div>
      <button class="buy-now-button" type="submit">Guardar</button>
    </form>
  </main>
  <%- include('./partials/footer.ejs') %>